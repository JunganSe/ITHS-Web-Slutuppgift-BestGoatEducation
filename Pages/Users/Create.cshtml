@page
@model WestcoastEducationAdminApp.Pages.Users.Create
@{
    ViewData["Title"] = "Create user";
}
@section styles
{
<link rel="stylesheet" href="/css/box.css">
<link rel="stylesheet" href="/css/form.css">
}

<h1>@ViewData["Title"]</h1>

<div class="box">
    <form class="form" method="post">
        <div class="box-item form-part">
            <p>Personal details</p>
            <input asp-for="UserModel.FirstName" placeholder="First name">
            <input asp-for="UserModel.LastName" placeholder="Last name">
            <input asp-for="UserModel.Email" placeholder="Email">
            <input asp-for="UserModel.PhoneNumber" placeholder="Phone number">
            <select asp-for="UserModel.RoleName">
                <option value="" selected disabled hidden>Select role</option>
                <option value="Student">Student</option>
                <option value="Teacher">Teacher</option>
            </select>
        </div>
        
        <div class="box-item form-part">
            <p>Address</p>
            <input asp-for="AddressModel.Street" placeholder="Street">
            <input asp-for="AddressModel.StreetNumber" placeholder="Street number">
            <input asp-for="AddressModel.PostalCode" placeholder="Postal code">
            <input asp-for="AddressModel.City" placeholder="City">
            <input asp-for="AddressModel.Country" placeholder="Country">
        </div>
        
        <button class="box-button" type="submit">Submit</button>
    </form>
</div>

<br>
<p>@ViewData["Message"]</p>