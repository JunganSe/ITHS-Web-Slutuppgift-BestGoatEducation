@page
@model WestcoastEducationAdminApp.Pages.Courses.Create
@{
    ViewData["Title"] = "Create course";
}
@section styles
{
<link rel="stylesheet" href="/css/textbox.css">
<link rel="stylesheet" href="/css/create-course.css">
}

<h1>@ViewData["Title"]</h1>


<div class="form-container textbox">
    <form method="post">
        <input asp-for="CreateCourseModel!.Name" placeholder="Name">
        <div>
            <label for="categorySelect">Category</label>
            <select asp-for="CreateCourseModel!.CategoryId" id="categorySelect">
                <option value="" selected disabled hidden>Please select</option>
                @foreach (var category in Model.CategoryModels!)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <textarea asp-for="CreateCourseModel!.Summary" rows="5" cols="30" placeholder="Summary"></textarea>
        <textarea asp-for="CreateCourseModel!.Description" rows="10" cols="30" placeholder="Description"></textarea>
        <input asp-for="CreateCourseModel!.Hours" placeholder="Hours">
        <input asp-for="CreateCourseModel!.Days" placeholder="Days">
        <input asp-for="CreateCourseModel!.Code" placeholder="Code">

        <button type="submit">Create</button>
    </form>
</div>